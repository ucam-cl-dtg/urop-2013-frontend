<!-- Example web.xml making use of the frontend features. -->
<!DOCTYPE web-app [
<!ENTITY frontend SYSTEM "frontend.xml">
]>

<web-app>
	<context-param>
		<param-name>cssNamespace</param-name>
		<param-value>test</param-value>
	</context-param>

	<context-param>
		<param-name>cssFiles</param-name>
		<param-value>test1,test2</param-value>
	</context-param>

	<context-param>
		<param-name>jsFiles</param-name>
		<param-value>test1.js,test3.js</param-value>
	</context-param>

	<context-param>
		<param-name>dashboardUrl</param-name>
		<param-value>http://www.cl.cam.ac.uk/research/dtg/berrycider/dashboard/api/dashboard</param-value>
	</context-param>

	<context-param>
		<param-name>apiKey</param-name>
		<param-value>blablabla</param-value>
	</context-param>

	<filter>
		<filter-name>apiauth</filter-name>
		<filter-class>uk.ac.cam.cl.dtg.teaching.APIFilter</filter-class>
		<init-param>
			<param-name>allowGlobal</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>apiauth</filter-name>
		<url-pattern>/api/*</url-pattern>
	</filter-mapping>

  &frontend;
</web-app>
